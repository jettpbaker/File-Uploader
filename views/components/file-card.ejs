<div class="file-card">
  <div class="file-card-header">
    <i class="ri-file-line" style="font-size: 2rem; color: var(--primary-color)"></i>
    <form action="/storage/delete/<%= file.id %>" method="POST">
      <button type="submit" class="btn btn-danger"><i class="ri-delete-bin-line"></i></button>
    </form>
  </div>
  <h3 class="file-name">
    <a href="/storage/file/<%= file.id %>" class="file-name-button"><%= file.name %></a>
  </h3>
  <p class="file-info">
    <span><%= file.size %> MB</span>
  </p>
  <div style="margin-top: 1rem">
    <a href="/storage/download/<%= file.id %>" class="btn btn-primary"> <i class="ri-download-line"></i> Download </a>
  </div>
</div>
